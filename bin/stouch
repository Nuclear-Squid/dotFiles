#! /bin/bash

# Créé des fichiers vides executables avec les noms passé en argument (avec le shebang qui va bien)
for arg in $@
do
	if [ "$arg" = "-e" ]
	then
		# remplacer 'nvim' et '-O' par $EDITOR pour un code moins bourrin.
		nvim ${@:1:$#-1} -O
	else
		touch "$arg"
		chmod +x "$arg"
		extention=$(echo "$arg" | cut -d '.' -f 2)

		case $extention in
			"sh") echo "#! /bin/env bash" > $arg;;
			"py") echo "#! /bin/env python3" > $arg;;
			"ml") echo "#! /bin/env ocaml" > $arg;;
		esac
	fi
done
